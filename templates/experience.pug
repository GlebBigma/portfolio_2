mixin educationItem(subtitle, title, content)
  .experience__item
    .experience__item-subtitle= subtitle
    .experience__item-title= title
    .experience__item-content= content

mixin experienceItem(date, title, description, domain, tech, team)
  .experience__item
    .experience__item-subtitle= date
    .experience__item-title= title
    .experience__item-content= description
    .experience__item__info 
      .info-title Domain:
      .info-value= domain
    .experience__item__info 
      .info-title Technologies:
      .info-value= tech
    .experience__item__info 
      .info-title Project Team Size:
      .info-value= team

